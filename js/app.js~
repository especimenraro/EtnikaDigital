$(function () {
$('.contenedor-interfaz').css('height',window.innerHeight)
var alturaContenido = window.innerHeight - document.getElementsByClassName('contenedor-menu')[0].clientHeight
$('.contenedor-general').css('height',alturaContenido)
$('#lineas').css('height',alturaContenido)
$('.contenedor-media').css('height',alturaContenido)
$('.contenedor-texto-credito').css('height',alturaContenido)
$('.fi-x').click(function () {
		$('.contenedor-contenido-menu').hide()
		$('#lineas').hide()
		$('#contacto').hide()
		$('#acercade').hide()
		$('#qs').hide()
		$('.contenedor-media').hide()
		$('.media').attr('src','')
})
$('#menu-qs').click(function () {
		$('.contenedor-contenido-menu').show()
		$('#lineas').hide()
		$('#contacto').hide()
		$('#acercade').hide()
		$('#qs').toggle()
		})
$('#menu-lineas').click(function () {
	$('.contenedor-contenido-menu').show()
		$('#lineas').toggle()
		$('#contacto').hide()
		$('#acercade').hide()
		$('#qs').hide()
		})
$('#menu-contacto').click(function () {
	$('.contenedor-contenido-menu').show()
		$('#lineas').hide()
		$('#contacto').toggle()
		$('#acercade').hide()
		$('#qs').hide()
		})
$('#menu-acercade').click(function () {
	$('.contenedor-contenido-menu').show()
		$('#lineas').hide()
		$('#contacto').hide()
		$('#acercade').toggle()
		$('#qs').hide()
		})
}) // FIN DOCUMENT.READY



